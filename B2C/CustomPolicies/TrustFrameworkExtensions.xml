          <IncludeTechnicalProfile ReferenceId="Facebook-OIDC-Base" />
          <UseTechnicalProfileForSessionManagement ReferenceId="SM-SocialLogin" />
        </TechnicalProfile>


      </TechnicalProfiles>      
    </ClaimsProvider>


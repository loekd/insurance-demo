@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
<RemoteAuthenticatorView Action="@Action">
    <LoggingIn>
        You are about to be redirected to Azure AD B2C.
    </LoggingIn>
    <LogInFailed>
        Login failed.
    </LogInFailed>
    <LogOut>
        Logging out.
    </LogOut>
    <CompletingLogOut>
        Completing log out.
    </CompletingLogOut>
    <LogOutSucceeded>
        Logged out successfully.
    </LogOutSucceeded>
    <CompletingLoggingIn>
        Completing login.
    </CompletingLoggingIn>
</RemoteAuthenticatorView>

@code{
    [Parameter] public string? Action { get; set; }
}
